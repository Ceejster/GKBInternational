@{
    ViewData["Title"] = "Home Page";
}


<!-- Main image and get quote button. All CSS under SECTION 1 -->
<section class="hero main-section" id="hero">
    <div class="heroOverlay"></div>
    <div class="banner">
        <h1>GKB International</h1>
        <h2>Easy and Reliable Sourcing Solutions</h2>
        <div class="row">
            <!-- Button to Trigger Modal -->
            <div class="col mb-3">
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#quoteModal">
                    Get Quote
                </button>
            </div>

            <!-- Modal -->
            <div class="modal fade" id="quoteModal" tabindex="-1" aria-labelledby="quoteModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="quoteModalLabel">Get a Quote</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <form id="quoteForm" method="post" action="/Quote/Submit">
                            @Html.AntiForgeryToken()
                            <div class="modal-body">
                                <div class="mb-3">
                                    <label for="name" class="form-label">Your Name</label>
                                    <input type="text" class="form-control" id="name" name="Name" required>
                                </div>
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email Address</label>
                                    <input type="email" class="form-control" id="email" name="Email" required>
                                </div>
                                <div class="mb-3">
                                    <label for="message" class="form-label">Message</label>
                                    <textarea class="form-control" id="message" name="Message" rows="3" required></textarea>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

<!-- Graphics and main info. Short to the point. All CSS under SECTION 2 -->
<section class="portfolio-highlight sectionTwo">
    <div class="container">
        <div class="row align-items-center">
            <!-- Left Column: Image -->
            <div class="col-md-6">
                <img src="/assets/shippingContainers.jpg" alt="Portfolio Highlights" class="img-fluid rounded">
            </div>
            <!-- Right Column: Text & CTA -->
            <div class="col-md-6">
                <h2>Maximize Your Cost Savings Today!</h2>
                <p>
                    Discover reliable sourcing solutions that streamline your supply chain and boost your bottom line.
                </p>
                <a href="/Portfolio" class="btn portfolio-btn">View Our Portfolio</a>
            </div>
            
        </div>
    </div>
</section>

<!-- Info cards detailing what to expect when working with GKB. All CSS under SECTION 3-->
<section class="container sectionThree">
    <!-- First Row -->
    <div class="row">
        <div class="col-lg-6 col-sm-12">
            <div class="row-top">
                <div class="cardHeader">
                    <h2 class="section-title"><span class="fontStyle">We are experts at sourcing</span> anything you need, anywhere you want</h2>
                </div>
            </div>
            <div class="row-bot">
                <div class="cardHeaderText">
                    <p class="section-info">
                        Are you wanting to source new materials or production overseas without losing any quality and to have more savings? Are you looking to start manufacturing something new? We can help make all those dreams come true.
                    </p>
                </div>
            </div>
            <div>
                <button class="portfolio-btn">Contact Us Today!</button>
            </div>
        </div>
        <div class="col-lg-6 col-sm-12">
            <img src="/assets/customerService.jpg" alt="Customer Service">
        </div>
    </div>

    <!-- Second Row (Cards) -->
    <div class="row">
        <!-- Card 1 -->
        <div class="col">
            <div class="cardBody">
                <h3 class="card-title fontStyle">Sourcing</h3>
                <p>
                    We only work verified suppliers and manufacturers to source the products that meet your exact requirements.
                </p>
            </div>
        </div>
        <!-- Card 2 -->
        <div class="col">
            <div class="cardBody">
                <h3 class="card-title fontStyle">Quality</h3>
                <p>
                    With years of experience in the sourcing industry and a dedicated team, GKB is the ideal partner for your business. Trust us to handle your sourcing needs efficiently and effectively.
                </p>
            </div>
        </div>
        <!-- Card 3 -->
        <div class="col">
            <div class="cardBody">
                <h3 class="card-title fontStyle">Easy</h3>
                <p>
                    With GKB, sourcing high-quality products has never been easier. Let us handle the logistics and shipping while you focus on growing your business.
                    You won't need to stress about a thing with our experts on hand helping to make sure everything runs smoothly and efficiently.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Flip cards outlining what GKB can do. All CSS under SECTION 4-->
