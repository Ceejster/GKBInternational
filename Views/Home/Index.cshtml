            </div>
            <!-- Product 3: Raw Materials -->
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="product-card">
                    <div class="product-icon">
                        <img src="/assets/raw-materials-icon.png" alt="Raw Materials Icon">
                    </div>
                    <h3><span class="fontStyle">Raw Materials</span></h3>
                    <p>High-quality raw materials for industries like construction, manufacturing, and textiles.</p>
                    <a asp-controller="Products" asp-action="RawMaterials" class="btn portfolio-btn">Learn More</a>
                </div>
            </div>
            <!-- Product 4: Construction -->
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="product-card">
                    <div class="product-icon">
                        <img src="/assets/construction-icon.png" alt="Construction Icon">
                    </div>
                    <h3><span class="fontStyle">Construction</span></h3>
                    <p>Durable and reliable construction materials and equipment for your projects.</p>
                    <a asp-controller="Products" asp-action="Construction" class="btn portfolio-btn">Learn More</a>
                </div>
            </div>
        </div>
    </div>
</section>

