@{
    ViewData["Title"] = "Home Page";
}


<!-- Main image and get quote button. All CSS under SECTION 1 -->
<section class="hero main-section" id="hero">
    <div class="heroOverlay"></div>
    <div class="banner">
        <h1>GKB International</h1>
        <h2>Easy and Reliable Sourcing Solutions</h2>
        <div class="row">
            <!-- Button to Trigger Modal -->
            <div class="col mb-3">
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#quoteModal">
                    Get Quote
                </button>
            </div>

            <!-- Modal -->
            <div class="modal fade" id="quoteModal" tabindex="-1" aria-labelledby="quoteModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="quoteModalLabel">Get a Quote</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <form id="quoteForm" method="post" action="/Quote/Submit">
                            @Html.AntiForgeryToken()
                            <div class="modal-body">
                                <div class="mb-3">
                                    <label for="name" class="form-label">Your Name</label>
                                    <input type="text" class="form-control" id="name" name="Name" required>
                                </div>
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email Address</label>
                                    <input type="email" class="form-control" id="email" name="Email" required>
                                </div>
                                <div class="mb-3">
                                    <label for="message" class="form-label">Message</label>
                                    <textarea class="form-control" id="message" name="Message" rows="3" required></textarea>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

<!-- Graphics and main info. Short to the point. All CSS under SECTION 2 -->
