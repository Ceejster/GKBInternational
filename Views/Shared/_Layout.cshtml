<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GKBInternational</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GKBInternational.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">GKBInternational</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="About" asp-action="Index">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Portfolio" asp-action="Index">Portfolio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Services" asp-action="Index">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Contact" asp-action="Index">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid p-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <section class="contact-section">
        <div class="container col-lg-8">
            <div class="row">
                <div class="centerMe">
                    <h2>Contact Us</h2>
                </div>
                <!-- Left Side -->
                <div class="col-md-4 contact-info">
                    <h3>Head Office</h3>
                    <p>123 Business Street, London, UK</p>
                    <div class="contact-box">
                        <p><strong>WhatsApp:</strong> +44 20 7946 0958</p>
                        <p><strong>Phone:</strong> +44 20 7946 0958</p>
                        <a href="mailto:info@gkbintl.com">info@gkbintl.com</a>
                    </div>
                    <div class="social-icons">
                        <a href="https://linkedin.com" target="_blank"><i class="fab fa-linkedin"></i></a>
                        <a href="https://facebook.com" target="_blank"><i class="fab fa-facebook"></i></a>
                        <a href="https://wa.me/4402079460958" target="_blank"><i class="fab fa-whatsapp"></i></a>
                    </div>
                </div>

                <!-- Right Side (Form) -->
                <div class="col-md-8">
                    <form method="post" action="/Contact/SendEmail" class="contact-form">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <input type="text" class="form-control" name="Name" placeholder="Full name" required>
                        </div>
                        <div class="mb-3">
                            <input type="text" class="form-control" name="CompanyName" placeholder="Company Name">
                        </div>
                        <div class="mb-3">
                            <input type="email" class="form-control" name="Email" placeholder="Email" required>
                        </div>
                        <div class="mb-3">
                            <input type="tel" class="form-control" name="PhoneNumber" placeholder="Phone Number">
                        </div>
                        <div class="mb-3">
                            <textarea class="form-control" name="Message" rows="4" placeholder="Message" required></textarea>
                        </div>
                        <div class="text-end">
                            <button type="submit" class="btn btn-primary">Send</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>


    <footer class="border-top footer text-muted">
        <div class="">
            &copy; 2025 - GKBInternational
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
