@{
    ViewData["Title"] = "Electronics";
}

<!-- Product Header -->
<section class="product-header">
    <div class="container">
        <h1>Electronics</h1>
        <p class="lead">From consumer electronics to industrial components, we source high-quality products for your needs.</p>
    </div>
</section>

<!-- Product Details -->
<section class="product-details">
    <div class="container">
        <div class="row">
            <!-- Product Image -->
            <div class="col-md-6">
                <img src="/assets/supplyChain.jpg" alt="Electronics" class="img-fluid">
            </div>
            <!-- Product Content -->
            <div class="col-md-6">
                <h2>Why Choose Our Electronics?</h2>
                <p>We partner with verified suppliers to provide you with the best electronics for your business. Whether you need consumer gadgets or industrial components, we’ve got you covered.</p>
                <ul>
                    <li>High-quality components</li>
                    <li>Competitive pricing</li>
                    <li>Reliable suppliers</li>
                    <li>Custom solutions</li>
                </ul>
                <a asp-page="/Contact" class="btn portfolio-btn">Contact Us for a Quote</a>
            </div>
        </div>
    </div>
</section>

<!-- Examples of Electronics -->
<section class="product-examples">
    <div class="container">
        <h2>Electronics We Source</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="example-card">
                    <img src="/assets/boxesWarehouse.jpg" alt="Consumer Electronics" class="img-fluid">
                    <h3>Consumer Electronics</h3>
                    <p>Smartphones, tablets, and home appliances.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="example-card">
                    <img src="/assets/qualityControl.jpg" alt="Industrial Electronics" class="img-fluid">
                    <h3>Industrial Electronics</h3>
                    <p>Components for manufacturing and automation.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="example-card">
                    <img src="/assets/supplyChain.jpg" alt="Medical Electronics" class="img-fluid">
                    <h3>Medical Electronics</h3>
                    <p>Devices and equipment for healthcare.</p>
                </div>
            </div>
        </div>
    </div>
</section>